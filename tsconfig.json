{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "types": ["jest"],
    "baseUrl": "./src",
    "paths": {
      "@domain": ["domain"],
      "@hooks": ["hooks"],
      "@components": ["presentation/components"],
      "@screens": ["presentation/screens"],
      "@theme": ["presentation/theme"],
      "@services": ["services"],
      "@assets": ["assets"],
      "@routes": ["routes"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"]
}
